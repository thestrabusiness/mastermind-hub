<div class="centered-form">
  <h2>
    Add a call
  </h2>

  <%= form_with model: [@group, @call] do |form| %>
    <div class="form-field">
      <%= form.label :scheduled_on %>
      <div class="select-field-row">
        <%= form.datetime_select :scheduled_on %>
      </div>
    </div>
    <div class="form-field">
      <%= form.submit %>
    </div>
  <% end %>
</div>


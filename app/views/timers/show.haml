.timer-page
  .timer-details
    - if @timer.nil?
      .timer-name
        No timer started yet

    - if @timer.present?
      .timer-name
        Time left for
        = @timer.user.first_plus_initial

      .timer-container
        .timer{data: {timer_end: @timer.ends_at_for_js}}
          = @timer.created_at

    - if current_user.facilitator?
      .timer-controls
        .title New Timer
        = form_for Timer.new, url: group_timer_path(@group, @timer) do |form|
          .form-field
            = form.label :duration
            = form.select :duration, options_for_select(Timer.duration_select_options)
          .form-field
            = form.label :user_id
            = form.select :user_id, options_for_select(User.select_options)
          = form.submit

%audio#timer_alert{src: "http://static1.grsites.com/archive/sounds/musical/musical009.mp3", controls: false}


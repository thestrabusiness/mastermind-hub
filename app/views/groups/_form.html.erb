<%= form_for @group do |form| %>
    <div class="form-field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-field">
      <%= form.label :call_day %>
      <%= form.select :call_day, options_for_select(Group.call_day_options) %>
    </div>

    <div class="form-field">
      <%= form.label :call_time, "Default call time" %>
      <div class="select-field-row">
        <%= form.time_select :call_time, minute_step: 10, ampm: true %>
      </div>
    </div>

    <% if !@group.persisted? %>
      <div class="form-field">
        <%= label_tag :emails %>
        <%= text_field_tag :emails %>
      </div>
    <% end %>

    <div class="form-buttons">
      <div></div>
      <%= form.submit %>
      <% if @group.persisted? %>
        <%= link_to group_path(@group),
          id: "delete_group",
          method: :delete,
          data:{ confirm: "Are you sure you want to delete this group? This is permanent." } do %>
          <%= octicon "trash", class: "red", height: 30 %>
        <% end %>
      <% else %>
        <div></div>
      <% end %>
    </div>
<% end %>

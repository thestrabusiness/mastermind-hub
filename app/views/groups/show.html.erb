<div class="centered-content column">
  <div class="title">
    <%= @group.name %>
  </div>
  <div class="top-link">
    <%= link_to "Back to groups", groups_path %>
  </div>
  <div class="top-link">
    <%= link_to "Edit #{@group.name}", edit_group_path(@group) %>
  </div>
  <div class="top-link">
    <%= link_to "Manage Invites", group_group_invites_path(@group) %>
  </div>
  <div class="top-link">
    Created by: <%= @group.creator.full_name %>
  </div>

  <% if @group.todays_call.present? %>
    <%= render "calls_section",
               title: "Today's call",
               calls: [@group.todays_call],
               section_id: "todays_call" %>
  <% elsif @group.upcoming_call.present? %>
    <%= render "calls_section",
               title: "Upcoming call",
               calls: [@group.upcoming_call],
               section_id: "upcoming_call" %>
  <% else %>
    <div class="section">
      <%= link_to "Add a new call",
        new_group_call_path(@group),
        html_options: { class: "title" } %>
    </div>
  <% end %>

  <%= render "calls_section",
             title: "Previous calls",
             calls: @previous_calls,
             section_id: "previous_calls" %>
</div>

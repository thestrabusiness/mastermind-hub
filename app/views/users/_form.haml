.form
  = form_for @user do |form|
    .form-field
      = form.label :first_name
      = form.text_field :first_name

    .form-field
      = form.label :last_name
      = form.text_field :last_name

    .form-field
      = form.label :email
      = form.text_field :email

    .form-field
      = form.label :password
      = form.password_field :password

    .form-field
      = form.submit
